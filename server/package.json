{
  "name": "server",
  "version": "1.0.0",
  "description": "Server API",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "concurrently \"nodemon --exec ts-node src/index.ts\" \"eslint src/**/*.ts --fix\"",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.ts --fix",
    "mongo:up": "docker compose up -d",
    "mongo:down": "docker compose down",
    "mongo:clean": "npm run mongo:down && docker volume rm server_data-mongo"
  },
  "keywords": [],
  "author": "Ivan Oliinyk",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
